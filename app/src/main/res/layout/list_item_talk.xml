<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp" >

    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/talk_list_item_avatar"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <TextView
        android:id="@+id/talk_list_item_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingStart="72dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Primary text"/>
    <TextView
        android:id="@+id/talk_list_item_secondary_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/talk_list_item_primary"
        android:textSize="14sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingStart="72dp"
        android:paddingEnd="16dp"
        android:text="Secondary 1 text"/>

    <include layout="@layout/separator"
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="72dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
